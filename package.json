{
  "version": "0.0.7",
  "private": false,
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@mariolazzari/philosophy-api",
  "author": "Mario Lazzari",
  "description": "Philosophy REST APIs client TypeScript based",
  "module": "dist/philosophy-api.esm.js",
  "size-limit": [
    {
      "path": "dist/philosophy-api.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/philosophy-api.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.2.0",
    "@vitest/coverage-v8": "^3.0.7",
    "size-limit": "^11.2.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.8.1",
    "typescript": "^5.8.2",
    "vitest": "^3.0.7"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mariolazzari/philosophy-api.git"
  },
  "keywords": [
    "philosophy",
    "nodejs",
    "typescript",
    "vitest",
    "tsdx",
    "rest"
  ],
  "bugs": {
    "url": "https://github.com/mariolazzari/philosophy-api/issues"
  },
  "homepage": "https://github.com/mariolazzari/philosophy-api#readme"
}
