{
  "version": "0.0.4",
  "private": false,
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@mariolazzari/philosophy-api",
  "author": "Mario Lazzari",
  "module": "dist/philosophy-api.esm.js",
  "size-limit": [
    {
      "path": "dist/philosophy-api.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/philosophy-api.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.0.0",
    "@vitest/coverage-v8": "^0.34.6",
    "husky": "^8.0.3",
    "size-limit": "^11.0.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  }
}
